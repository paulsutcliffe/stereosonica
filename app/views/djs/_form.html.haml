= form_for @dj do |f|
  - if @dj.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dj.errors.count, "error")} prohibited this dj from being saved:"
      %ul
        - @dj.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Save'
