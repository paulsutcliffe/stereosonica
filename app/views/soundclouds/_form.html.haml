= form_for @soundcloud do |f|
  - if @soundcloud.errors.any?
    #error_explanation
      %h2= "#{pluralize(@soundcloud.errors.count, "error")} prohibited this soundcloud from being saved:"
      %ul
        - @soundcloud.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :link
    = f.text_field :link
  .actions
    = f.submit 'Save'
